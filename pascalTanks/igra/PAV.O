program gh1;
uses crt;
var a,b,c,x1,x2,d,x:REAL;
        BEGIN
        clrscr;
        writeln(' введите a,b,c');
        readln(a,b,c);
        d:=b*b-4*a*c;
        if d<0 then writeln('корней нет');
        if d=0 then begin x:=-b/(2*a);
        writeln(' x=',x)end
        else begin x1:=-b+sqrt(d);
                   x2:=-b-sqrt(d);
                   writeln('x=',x1,x2 )end;
                   end.

